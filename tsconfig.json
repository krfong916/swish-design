{
  "compilerOptions": {
    "outDir": "build/lib",
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./types"
  },
  "compileOnSave": true,
  "include": ["swish-ui/components/**/*", "stories/**/*"],
  "exclude": ["node_modules", "swish-ui/node_modules"]
}
